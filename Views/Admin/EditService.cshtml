@model Service

@{
    ViewData["Title"] = "Edytuj usługę";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Edytuj usługę</h2>

                <form method="post">
                    <input type="hidden" asp-for="Id">

                    <div class="mb-3">
                        <label for="Name" class="form-label">Nazwa usługi</label>
                        <input type="text" class="form-control" id="Name" asp-for="Name" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Opis</label>
                        <textarea class="form-control" id="Description" asp-for="Description" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Price" class="form-label">Cena (PLN)</label>
                        <input type="number" step="0.01" class="form-control" id="Price" asp-for="Price" required>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="DurationMinutes" class="form-label">Czas trwania (minuty)</label>
                        <input type="number" class="form-control" id="DurationMinutes" asp-for="DurationMinutes" required>
                        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="IsActive" asp-for="IsActive">
                        <label class="form-check-label" for="IsActive">
                            Usługa aktywna
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    <a href="/Admin/Services" class="btn btn-outline-secondary">Anuluj</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
