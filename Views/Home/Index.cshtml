@model IEnumerable<Service>
@{
    ViewData["Title"] = "Dostępne Usługi";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-4">✂️ Rezerwacja Usług Fryzjerskich</h1>
        <p class="lead">Wybierz usługę i zarezerwuj swój termin</p>
    </div>
</div>

@if (Model?.Count() == 0)
{
    <div class="alert alert-info">
        <p>Brak dostępnych usług.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var service in Model ?? Enumerable.Empty<Service>())
        {
            <div class="col-md-4 mb-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">@service.Description</p>
                        <p class="card-text">
                            <strong>Czas trwania:</strong> @service.DurationMinutes min<br>
                            <strong>Cena:</strong> <span class="text-success">@service.Price.ToString("C")</span>
                        </p>
                    </div>
                    <div class="card-footer bg-white">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/Reservation/Create?serviceId=@service.Id" class="btn btn-primary w-100">
                                Zarezerwuj
                            </a>
                        }
                        else
                        {
                            <a href="/Account/Login" class="btn btn-outline-primary w-100">
                                Zaloguj się aby zarezerwować
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
